<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Naaly" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/lite_black</item>
        <item name="android:itemBackground">@color/lite_black</item>
        <item name="android:itemTextAppearance">@style/ContextMenu.TextAppearance</item>

    </style>

    <style name="Theme.Naaly" parent="Base.Theme.Naaly" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lite_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/naaly_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Naaly</item>

    </style>
    <style name="ContextMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:background">#212020</item>
        <item name="android:itemTextAppearance">@style/ContextMenu.TextAppearance</item>
    </style>


    <style name="ContextMenu.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>